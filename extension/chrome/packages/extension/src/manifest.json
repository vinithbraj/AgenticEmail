{
  "manifest_version": 3,
  "name": "Agentic Email",
  "version": "1.0",
  "description": "A email client to generate autoresponse",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "tabs","scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}